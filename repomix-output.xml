 * @param projectId - ãƒ—ãƒ­ã‚¸ã‚§ã‚¯ãƒˆID
 * @returns è¦‹ã¤ã‹ã£ãŸéƒ¨å“ã€ã¾ãŸã¯ null
 */
export async function findPartByNumber(
    partNumber: string,
    projectId: string
): Promise<Part | null> {
    const partsRef = collection(db, 'parts');
    const q = query(
        partsRef,
        where('part_number', '==', partNumber),
        where('project_id', '==', projectId)
    );
    const snapshot = await getDocs(q);

    if (snapshot.empty) {
        return null;
    }

    const partDoc = snapshot.docs[0];
    return {
        id: partDoc.id,
        ...partDoc.data()
    } as Part;
}

