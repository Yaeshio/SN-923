 * STLãƒ•ã‚¡ã‚¤ãƒ«ã‚’ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ã—ã€éƒ¨å“ã‚’ä½œæˆï¼ˆæœªå­˜åœ¨æ™‚ï¼‰ã—ã€æŒ‡å®šå€‹æ•°ã®ã‚¢ã‚¤ãƒ†ãƒ ã‚’ä½œæˆã™ã‚‹
 * ã“ã‚Œã‚‰ã‚’ã‚¢ãƒˆãƒŸãƒƒã‚¯ãªãƒˆãƒ©ãƒ³ã‚¶ã‚¯ã‚·ãƒ§ãƒ³ã¨ã—ã¦å®Ÿè¡Œã™ã‚‹
 */
export async function registerPrintedItems(
    fileBuffer: ArrayBuffer,
    partNumber: string,
    projectId: string,
    quantity: number,
    targetStatus: ProcessStatus = 'PRINTED'
): Promise<{ success: boolean; partNumber: string; downloadUrl: string }> {

    // 1. Storageã¸ã®ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ (ãƒˆãƒ©ãƒ³ã‚¶ã‚¯ã‚·ãƒ§ãƒ³ã®å¤–ã§è¡Œã†)
    const timestamp = Date.now();
    const storagePath = `projects/${projectId}/stl/${partNumber}_${timestamp}.stl`;
    const storageRef = ref(storage, storagePath);
    await uploadBytes(storageRef, fileBuffer);
    const downloadUrl = await getDownloadURL(storageRef);

    // 2. Firestoreãƒˆãƒ©ãƒ³ã‚¶ã‚¯ã‚·ãƒ§ãƒ³
    try {
        await runTransaction(db, async (transaction) => {
            // 2a. éƒ¨å“(Part)ã®å­˜åœ¨ç¢ºèª
            const partsRef = collection(db, 'parts');
            const q = query(
                partsRef,
                where('part_number', '==', partNumber),
                where('project_id', '==', projectId)
            );
            const partQuerySnapshot = await getDocs(q);

            let partId: string;

            if (partQuerySnapshot.empty) {
                // æ–°è¦ä½œæˆ
                const partDocRef = doc(partsRef);
                partId = partDocRef.id;

                const newPart: Part = {
                    id: partId,
                    part_number: partNumber,
                    project_id: projectId
                };

                transaction.set(partDocRef, newPart);
            } else {
                partId = partQuerySnapshot.docs[0].id;
            }

            // 2b. PartItem ã®ä½œæˆ
            for (let i = 0; i < quantity; i++) {
                const itemRef = doc(collection(db, 'partItems'));

                // BoxServiceã‚’ä½¿ç”¨ã—ã¦ç©ºããƒœãƒƒã‚¯ã‚¹ã‚’ç¢ºä¿
                // findAndOccupyEmptyBox ã¯å†…éƒ¨ã§ getDocs (éãƒˆãƒ©ãƒ³ã‚¶ã‚¯ã‚·ãƒ§ãƒ³èª­è¾¼) ã‚’è¡Œã†ãŒã€
                // ãƒˆãƒ©ãƒ³ã‚¶ã‚¯ã‚·ãƒ§ãƒ³ã‚’æ¸¡ã™ã“ã¨ã§ã€å®Ÿéš›ã®å æœ‰æ›´æ–°ã¯ã‚¢ãƒˆãƒŸãƒƒã‚¯ã«è¡Œã‚ã‚Œã‚‹
                const box = await BoxService.findAndOccupyEmptyBox(itemRef.id, transaction);

                const newItemStub = {
                    id: itemRef.id,
                    part_id: partId,
                    box_id: box.id,
                    storage_case: box.name, // äº’æ›æ€§ã®ãŸã‚ã«ãƒœãƒƒã‚¯ã‚¹åã‚’ã‚»ãƒƒãƒˆ
                    status: targetStatus,
                    completed_at: null,
                    updated_at: serverTimestamp(),
                    stl_url: downloadUrl
                };

                transaction.set(itemRef, newItemStub);
            }
        });

        return { success: true, partNumber, downloadUrl };
    } catch (error: any) {
        console.error('[ProductionService] Failed to register items:', error);
        // ãƒœãƒƒã‚¯ã‚¹ãŒè¶³ã‚Šãªã„å ´åˆãªã©ã®ã‚¨ãƒ©ãƒ¼ã‚’å†ã‚¹ãƒ­ãƒ¼ã—ã€ã‚¢ã‚¯ã‚·ãƒ§ãƒ³å´ã§ãƒãƒ³ãƒ‰ãƒ«ã•ã›ã‚‹
        throw error;
    }
}
